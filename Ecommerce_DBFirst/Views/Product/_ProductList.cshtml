@model IEnumerable<Ecommerce_DBFirst.ViewModels.ProductListVM>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.StockQuantity</td>
                <td>@item.CategoryName</td>
                <td>
                    <!-- View allowed for all authenticated users -->
                    <a asp-controller="Product"
                       asp-action="Details"
                       asp-route-id="@item.ProductId">
                        View
                    </a>

                    @* Admin-only actions *@
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <span> | </span>
                        <a asp-controller="Product"
                           asp-action="Edit"
                           asp-route-id="@item.ProductId">
                            Edit
                        </a>

                        <span> | </span>
                        <a asp-controller="Product"
                           asp-action="Delete"
                           asp-route-id="@item.ProductId"
                           onclick="return confirm('Are you sure you want to delete this product?');">
                            Delete
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
