<h2>Login</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form method="post">
    <div>
        <label>Username</label>
        <input name="username" />
    </div>

    <div>
        <label>Password</label>
        <input name="password" type="password" />
    </div>

    <button type="submit">Login</button>
</form>

