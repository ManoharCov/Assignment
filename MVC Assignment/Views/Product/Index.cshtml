@model List<MVC_Assignment.Models.Product>

<h2>Product List</h2>

<table border="1" cellpadding="5">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>₹@item.Price</td>
            <td>
                <a asp-controller="Product"
                   asp-action="Details"
                   asp-route-id="@item.Id">
                    View
                </a>
            </td>
        </tr>
    }
</table>
